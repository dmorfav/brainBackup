rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para leer documentos
    match /{document=**} {
      allow read: if true; // Permitir la lectura para todos
    }
    // Regla para escribir documentos
    match /{document=**} {
      allow read: if true; // Permitir la lectura para todos
      allow write: if request.auth != null; // Permitir la escritura solo para usuarios autenticados
    }
  }
}
